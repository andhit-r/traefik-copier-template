api:
  dashboard: true

log:
  level: INFO

accessLog: {}

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
  file:
    directory: /etc/traefik/dynamic
    watch: true

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
  websecure:
    address: ":443"

certificatesResolvers:
  leresolver:
    acme:
      email: "{{ le_email }}"
      storage: "{{ acme_storage }}"
      httpChallenge:
        entryPoint: web

version: "3.9"

services:
  traefik:
    image: "{{ traefik_image }}:{{ traefik_version }}"
    container_name: "${COMPOSE_PROJECT_NAME:-{{ stack_name }}}-traefik"
    restart: unless-stopped
    command:
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--entrypoints.web.address=:80"
      - "--entrypoints.websecure.address=:443"
      - "--api.dashboard=true"
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - "{{ docker_socket_path }}:/var/run/docker.sock:ro"
      - "{{ acme_volume_hostpath }}:/letsencrypt"
      - "./traefik/traefik.yml:/etc/traefik/traefik.yml:ro"
      - "./traefik/dynamic:/etc/traefik/dynamic:ro"
    networks:
      - "{{ public_network }}"
      - "{{ internal_network }}"
    labels:
      # Enable only for routers we define below
      - "traefik.enable=true"

      # Local dashboard (HTTP) - only on devel compose we attach router rule
      - "traefik.http.middlewares.local-compress.compress=true"

networks:
  {{ public_network }}:
    external: true
  {{ internal_network }}:
    external: true
